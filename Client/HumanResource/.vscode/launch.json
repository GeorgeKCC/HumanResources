{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "ğŸš€ Debug SSR Server",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "restart": true,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "${workspaceFolder}",
      "resolveSourceMapLocations": [
        "${workspaceFolder}/dist/**/*.js",
        "!**/node_modules/**"
      ],
      "sourceMaps": true,
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**"
      ],
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "ğŸŒ Debug Angular Client (Chrome)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:4000",
      "webRoot": "${workspaceFolder}/src",
      "sourceMapPathOverrides": {
        "webpack:/*": "${webRoot}/*"
      }
    },
    {
      "name": "ğŸŒ Debug Angular Client (Edge)",
      "type": "msedge", 
      "request": "launch",
      "url": "http://localhost:4000",
      "webRoot": "${workspaceFolder}/src",
      "sourceMapPathOverrides": {
        "webpack:/*": "${webRoot}/*"
      }
    }
  ],
  "compounds": [
    {
      "name": "ğŸ”¥ Debug Full SSR App (Chrome)",
      "configurations": [
        "ğŸš€ Debug SSR Server",
        "ğŸŒ Debug Angular Client (Chrome)"
      ]
    },
    {
      "name": "ğŸ”¥ Debug Full SSR App (Edge)",
      "configurations": [
        "ğŸš€ Debug SSR Server", 
        "ğŸŒ Debug Angular Client (Edge)"
      ]
    }
  ]
}